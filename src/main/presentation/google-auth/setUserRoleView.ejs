<div class="card">
    <div class="card-body">
        <h5 class="card-title">Choose Your Role</h5>
        <form action="<%= process.env.BASE_URL %>/api/finishSignin?token=<%= token %>" method="POST" class="role-selection-form">
            <div class="role-option">
                <input type="radio" id="owner" name="role" value="owner">
                <label for="owner">Owner</label>
            </div>
            <div class="role-option">
                <input type="radio" id="normal" name="role" value="normal">
                <label for="normal">Normal User</label>
            </div>
            <button type="submit" class="btn submit-button">Submit</button>
        </form>
    </div>
</div>

<style>
    .card {
    border: none;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    padding: 20px;
    max-width: 400px;
    margin: 0 auto;
}

.card-body {
    text-align: center;
}

.card-title {
    font-size: 24px;
    margin-bottom: 20px;
}

.role-selection-form {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.role-option {
    margin-bottom: 15px;
}

.role-option input[type="radio"] {
    display: none;
}

.role-option label {
    font-size: 18px;
    cursor: pointer;
}

.role-option label:before {
    content: '';
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-right: 10px;
    border-radius: 50%;
    border: 2px solid #333;
    transition: background-color 0.3s ease;
}

.role-option input[type="radio"]:checked + label:before {
    background-color: #333;
}

.btn.submit-button {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    font-size: 18px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.btn.submit-button:hover {
    background-color: #0056b3;
}

</style>